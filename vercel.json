{
  "name": "berjak-website",
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "functions": {
    "pages/api/webhook.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "pages/api/**"
    }
  },
  "env": {
    "TRAIN_STATION_URL": "http://localhost:5280"
  },
  "regions": ["iad1", "syd1"],
  "framework": "nextjs"
}

